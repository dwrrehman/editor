#!/bin/zsh

if [ "release" = "$1" ]; then
	clang -Ofast -Weverything -Wno-poison-system-directories editor.c -o editor

elif [ "clean" = "$1" ]; then
	rm -rf editor
	rm -rf editor.dSYM

elif [ "" = "$1" ]; then 
	clang -g -O0 -Weverything -Wno-poison-system-directories -fsanitize=address,undefined editor.c -o editor
else 
	echo "build: unknown target: $1"
fi
