#!/bin/zsh

if [ "release" = "$1" ]; then
	clang -Ofast -Weverything -Wno-poison-system-directories e.c -o ed

elif [ "clean" = "$1" ]; then
	rm -rf ed
	rm -rf ed.dSYM

elif [ "" = "$1" ]; then 
	clang -g -O0 -Weverything -Wno-poison-system-directories -fsanitize=address,undefined e.c -o ed
else 
	echo "build: unknown target: $1"
fi
