#!/bin/zsh


if [ "release" = "$1" ]; then
	clang -Ofast c.c -o run


elif [ "clean" = "$1" ]; then
	rm -rf run
	rm -rf run.dSYM

elif [ "" = "$1" ]; then 
	clang -g -O0 -Weverything -Wno-poison-system-directories -Wno-declaration-after-statement -fsanitize=address,undefined c.c -o run -ferror-limit=5

else 
	echo "build: unknown target: $1"
fi
